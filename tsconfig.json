{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "es2019"
    ],
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist",   
    "moduleResolution":"node",
    "outDir": "./tsc-dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "www",
    "docs"
  ]
}