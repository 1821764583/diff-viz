{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2022",
        "lib": [
            "ES2023",
            "dom"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "outDir": "./dist",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
       "src"
    ]
}